<%= form_for @comment do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :user_id %><br />
    <%= f.number_field :user_id %>
  </p>
  <p>
    <%= f.label :post_id %><br />
    <%= f.number_field :post_id %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.cktext_area :comment, :toolbar => 'Full', :width =>400, :height => 200 %>
  </p>
  <p><%= f.submit %></p>
<% end %>
