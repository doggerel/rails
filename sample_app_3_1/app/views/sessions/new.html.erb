
<h1>Sign in </h1>
<%=form_for(:session, :url=>sessions_path) do |f| %>
  <div class="field">
    <%=f.label :email%> or <span class=user-name>Username</span><br/>
    <%=f.text_field :email%><br/>
    <%=f.label :password%><br/>
    <%=f.password_field :password%>
  </div>
 <div class="actions">
   <%=f.submit "signin"%>
 </div>
<%end%>
<p>
  New user? <%=link_to "Sign up now!", signup_path%>
</p>


