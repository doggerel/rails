<div class = "user_info">
  <a href= "<%=user_path(current_user)%>">
    <%=gravatar_for current_user, :size=>30%>
    <span class="user_name">
      <%=current_user.name%>
    </span>
    <span class="microposts">
      <br>
      <%=pluralize(current_user.microposts.count, "micropost")%>
      <br>
      <%=current_user.following.count%> following
      <%=pluralize(current_user.followers.count, "follower")%>
    </span>
  </a>
  <br>
  <span class="messages">
    you have
  <%=pluralize(current_user.messages_from.count, "message")%>
    <ul>
      <%= render :partial =>'shared/message', 
        :collection => @message_feed%>
    </ul>
  </span>
</div>
